        "bottom_side = 20\n",
        "# 高さ\n",
        "height  = 5\n",
        "\n",
        "# 公式：台形の面積 = (上辺 + 下辺) *　高さ / 2\n",
        "result = (top_side + bottom_side) * height /2\n",
        "print(f\"{int(result)}cm\\u00B2\")\n"
